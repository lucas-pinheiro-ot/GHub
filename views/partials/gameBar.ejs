<style>
    .gamebar {
        background-color: var(--theBelow);
        width: 100%;

        padding-bottom: 1.3em;
    }

    .games {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .game {
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;

        margin: 0 1em;
        height: 50px;
        aspect-ratio: 1/1;
        border-radius: 15%;

        background-color: var(--background);
        transition: all linear .1s;
    }

    .game::before {
        content: '';

        width: 100%;
        height: 100%;
        border: 1px solid var(--background);
        border-radius: inherit;
        
        transition: all linear .1s;
    }

    .game:hover::before {
        scale: 1.15;
        bottom: -10%;
    }

    .game:hover {
        scale: 1.1;
        filter: brightness(2);
    }
</style>

<div class="gamebar">
    <div class="games">
        <div class="game"></div>
        <div class="game"></div>
        <div class="game"></div>
        <div class="game"></div>
    </div>
</div>